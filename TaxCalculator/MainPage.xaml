<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxCalculator.MainPage"
             Title="Tax Calculator">

     <StackLayout>

        <Label
            Text="{Binding SelectOptionLabel}"
            Padding="20,30,20,30"
            FontSize="Title"
            HorizontalTextAlignment="Center"
            TextColor="White"/>

        <StackLayout
            HorizontalOptions="Center"
            Orientation="Vertical"
            Spacing="20">

            <Button Text="{Binding TaxRateLocationLabel}"
                Command="{Binding GoToTaxRatesPage}"
                BackgroundColor="#7c21f3"
                TextColor="White"
                Padding="20"
                FontSize="Medium"/>
        
            <Button Text="{Binding TaxRateForOrderLabel}" 
                Command="{Binding GoToTaxOrderPage}"
                BackgroundColor="#7c21f3"
                TextColor="White"
                Padding="20"
                FontSize="Medium"/>
        </StackLayout>
        
    </StackLayout>

</ContentPage>
